<style>
    body {
        background-color: var(--bg-color);
        color: var(--font-color);
        height: auto;
        -ms-overflow-style: none; /* IE and Edge */
        scrollbar-width: none; /* Firefox */
        ::-webkit-scrollbar {
            display: none;
        }
    }

    .title {
        display: inline-flex;
        flex-direction: column;
        justify-content: left;

        margin-left: 2vw;
        margin-top: 2vh;

        border-bottom: 3px;
        border-right: 3px;
        border-top: 0;
        border-left: 0;
        border-bottom-right-radius: 10px;
        border-style: solid;
        border-color: #b4b4b6;

        h1 {
            font-family: f1-turbo, f1-torque, f1-reg;
            font-size: 2.3rem;
            margin: 0;
        }
        p {
            font-family: f1-reg, f1-torque;
            font-size: 1.6rem;
            font-weight: 500;
            margin-right: 1vw;
        }
    }

    .circuits {
        display: grid;

        grid-template-columns: repeat(2, 1fr);
        row-gap: 1%;
        column-gap: 4.5%;
        margin: 2%;
        margin-bottom: 80vh;

        ::-webkit-scrollbar {
            display: none;
        }
        scrollbar-width: none;
        -ms-overflow-style: none;

        .item-list {
            scroll-snap-type: x mandatory;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }
        .item-list::-webkit-scrollbar {
            display: none;
        }
    }

    .theme-switch-wrapper {
        display: flex;
        align-items: center;

        em {
            margin-left: 10px;
            font-size: 1rem;
        }
    }
    .theme-switch {
        display: inline-block;
        height: 34px;
        position: relative;
        width: 60px;
    }

    .theme-switch input {
        display: none;
    }

    .slider {
        background-color: #ccc;
        bottom: 0;
        cursor: pointer;
        left: 0;
        position: absolute;
        right: 0;
        top: 0;
        transition: 0.4s;
    }

    .slider:before {
        background-color: #fff;
        bottom: 4px;
        content: "";
        height: 26px;
        left: 4px;
        position: absolute;
        transition: 0.4s;
        width: 26px;
    }

    input:checked + .slider {
        background-color: #66bb6a;
    }

    input:checked + .slider:before {
        transform: translateX(26px);
    }

    .slider.round {
        border-radius: 34px;
    }

    .slider.round:before {
        border-radius: 50%;
    }
</style>

<script>
    const toggleSwitch = document.querySelector(
        '.theme-switch input[type="checkbox"]',
    );

    function switchTheme(e) {
        if (e.target.checked) {
            document.documentElement.setAttribute("data-theme", "dark");
        } else {
            document.documentElement.setAttribute("data-theme", "light");
        }
    }

    toggleSwitch.addEventListener("change", switchTheme, false);
</script>
