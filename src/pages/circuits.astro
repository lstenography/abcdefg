---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import "../../styles/circuits.css";
import "../../styles/global.css";
import Circuit from "../components/Circuit.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
    </head>
    <body>
        <Navigation />

        <div class="title">
            <h1 class="heading">Circuits</h1>
        </div>

        <div class="circuits">
            <Circuit
                name="Bahrain Grand Prix"
                country="Bahrain"
                imgPath="bahrain"
            />

            <Circuit
                name="Jeddah Corniche"
                country="Saudi Arabia"
                imgPath="saudi-arabia"
            />

            <Circuit
                name="Melbourne Grand Prix"
                country="Australia"
                imgPath="australia"
            />

            <Circuit 
                name="Suzuka Circuit"
                country="Japan"
                imgPath="japan"
            />

            <Circuit
                name="Shanghai Circuit"
                country="China"
                imgPath="china"
            />

            <Circuit
                name="Miami Autodrome"
                country="United States"
                imgPath="miami"
            />

            <Circuit
                name="Imola"
                country="Italy"
                imgPath="italy"
            />

            <Circuit
                name="Mexico City"
                country="Mexico"
                imgPath="mexico"
            />

            <Circuit
                name="Circuit de Monaco"
                country="Monaco"
                imgPath="monaco"
            />

            <Circuit
                name="Circuit Gilles Villeneuve"
                country="Canada"
                imgPath="canada"
            />

            
        </div>

        <div class="circuits"></div>

        <Footer />
    </body>
</html>

<style>
    .heading {
        display: flex;
        justify-content: center;

        margin-top: 17px;

        font-family: f1-torque, f1-reg, Cambria, Cochin, Georgia, Times,
            "Times New Roman", serif;
        font-size: 3.2rem;
        color: rgb(0, 0, 0);
    }

    .circuits {
        display: grid;

        grid-template-columns: repeat(3, 1fr);
        gap: 5%;

        margin: 3.5%;

        .cir {
            display: flex;
            flex-direction: column;
            padding: 3%;

            border-top-right-radius: 5%;
            border-bottom-left-radius: 5%;
            border-top: 3px;
            border-right: 2px;
            border-bottom: 0;
            border-left: 0;
            border-style: solid;

            background-color: rgb(247, 247, 247);

            /* background-image: url(../public/img/bkg.png); */

            .locations {
                display: flex;
                justify-content: space-between;
                align-items: center;

                .text {
                    h2 {
                        margin-top: 4px;
                        margin-bottom: 4px;

                        font-size: 1.3rem;
                    }

                    .name {
                        font-size: 2rem;
                    }
                    .country {
                        color: rgb(180, 0, 0);
                    }
                }
                img {
                    width: 70px;
                    border-color: rgba(0, 0, 0, 0.222);
                    border-width: 1px;
                    border-radius: 10px;
                    border-style: solid;
                }
            }
        }
        .decor {
            width: 95%;
            height: 1px;
            background-color: rgb(154, 154, 154);
            margin-left: 2.5%;
            margin-top: 1%;
        }

        .circuit {
            width: 85%;
            margin-top: 0;
            margin-bottom: 0;
            margin-left: 7.5%;
            margin-top: 3%;
            margin-bottom: 3%;
        }
    }
</style>
