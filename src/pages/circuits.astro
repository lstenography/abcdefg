<style>
    
    body {
        background-color: rgb(250, 250, 250);
        height: auto;
        -ms-overflow-style: none;  /* IE and Edge */
        scrollbar-width: none;  /* Firefox */
        ::-webkit-scrollbar {
            display: none;
        }
    }

    .title {
        display: inline-flex;
        flex-direction: column;
        justify-content: left;

        margin-left: 2vw;
        margin-top: 2vh;

        border-bottom: 3px;
        border-right: 3px;
        border-top: 0;
        border-left: 0;
        border-bottom-right-radius: 10px;
        border-style: solid;
        border-color: #b4b4b6;

        h1 {
            font-family: f1-turbo, f1-torque, f1-reg;
            font-size: 2.3rem;
            margin: 0;
            
        }
        p {
            font-family: f1-reg, f1-torque;
            font-size: 1.6rem;
            font-weight: 500;
            margin-right: 1vw;
        }
    }


    .circuits {
        display: grid;

        grid-template-columns: repeat(2, 1fr);
        row-gap: 1%;
        column-gap: 4.5%;
        margin: 2%;
        margin-bottom: 80vh;

        ::-webkit-scrollbar {
            display: none;
        }
        scrollbar-width: none;
        -ms-overflow-style: none;

        .item-list {
            scroll-snap-type: x mandatory;
            scrollbar-width: none;
            -ms-overflow-style: none;
        }
        .item-list::-webkit-scrollbar {
            display: none;
        }
    }
</style>

