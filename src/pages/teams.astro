---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Team from "../components/Team.astro";
import "../../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <Navigation />

    <div class="title">
      <h1>F1 2024 Teams</h1>
      <p>
        Discover all of the Formula 1 2024 Teams aswell as their standings. Also
        discover the driver info. Pay today.
      </p>
    </div>

    <div class="teams">
      <Team
        team="Red Bull Racing"
        points="307"
        url_team="red-bull"
        fname_1="Max"
        sname_1="Verstappen"
        fname_2="Sergio"
        sname_2="Perez"
        country1="Netherlands"
        podiums1="103"
        points1="285"
        gp1="197"
        dob1="1997"
        country2="Mexico"
        podiums2="21"
        points2="56"
        gp2="12"
        dob2="1990"

        driverurl1="max"
        driverurl2="sergio"
      />
    </div>

    <div class="teams">
      <Team
        team="Ferrari"
        points="302"
        url_team="ferrari"
        fname_1="Charles"
        sname_1="Leclerc"
        fname_2="Carlos"
        sname_2="Sainz"
        country1="Italy"
        podiums1="67"
        points1="247"
        gp1="223"
        dob1="1999"
        country2="Mexico"
        podiums2="23"
        points2="59"
        gp2="9"
        dob2="1992"

        driverurl1="charles"
        driverurl2="carlos"
      />
    </div>
  </body>

  <Footer />
</html>

<style>
  .title {
    display: inline-flex;
    flex-direction: column;
    justify-content: left;

    margin-left: 1vw;
    margin-top: 2vh;

    border-bottom: 3px;
    border-right: 3px;
    border-top: 0;
    border-left: 0;
    border-bottom-right-radius: 10px;
    border-style: solid;
    border-color: #b4b4b6;

    h1 {
      font-family: f1-turbo, f1-torque, f1-reg;
      font-size: 2.3rem;
      margin: 0;
    }
    p {
      font-family: f1-reg, f1-torque;
      font-size: 1.6rem;
      font-weight: 500;
      margin-right: 1vw;
    }
  }

  .teams {
    display: flex;
    justify-content: center;

    margin: 1vw;
  }
</style>
