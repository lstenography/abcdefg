---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Team from "../components/Team.astro";
import "../../styles/global.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
    </head>
    <body>
        <Navigation />

        <div class="title">
            <h1>F1 2024 Teams</h1>
            <p>
                Discover all of the Formula 1 2024 Teams aswell as their
                standings. Also discover the driver info. Pay today.
            </p>
        </div>

        <div class="teams">
            <Team />

            <Team />
        </div>

        <Footer />
    </body>
</html>

<style>
    .title {
        display: inline-flex;
        flex-direction: column;
        justify-content: left;

        margin-left: 1vw;
        margin-top: 2vh;

        border-bottom: 3px;
        border-right: 3px;
        border-top: 0;
        border-left: 0;
        border-bottom-right-radius: 10px;
        border-style: solid;
        border-color: #b4b4b6;

        h1 {
            font-family: f1-turbo, f1-torque, f1-reg;
            font-size: 2.3rem;
            margin: 0;
        }
        p {
            font-family: f1-reg, f1-torque;
            font-size: 1.6rem;
            font-weight: 500;
            margin-right: 1vw;
        }
    }

    .teams {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(5, 1fr);
        grid-column-gap: 15px;
        grid-row-gap: 10px;

        margin: 1vw;
    }
</style>
