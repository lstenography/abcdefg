---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import "../../styles/index.css";
import "../../styles/global.css";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<SpeedInsights />
		<Navigation />

		<!-- <img src="/img/wallpaper.jpg" alt="" class="wallpaper"> -->

		<div class="leaderboard">
			<h1>2024 F1 Constructor Standings:</h1>

			<div class="leaderboard-ctn">
				<div class="lb">
					<div class="team2 team">
						<div class="info">
							<h1>Ferrari</h1>
							<p>302 <span>pts</span></p>
						</div>
						<img src="/img/logos2/ferrari.png" alt="" />
					</div>
					<div class="podium2 podium"></div>
				</div>

				<div class="lb">
					<div class="team1 team">
						<div class="info">
							<h1>Red Bull Racing</h1>
							<p>373 <span>pts</span></p>
						</div>
						<img src="/img/logos2/redbull.png" alt="" />
					</div>
					<div class="podium1 podium"></div>
				</div>

				<div class="lb">
					<div class="team3 team">
						<div class="info">
							<h1>McLaren</h1>
							<p>295 <span>pts</span></p>
						</div>
						<img src="/img/logos2/mclaren.png" alt="" />
					</div>
					<div class="podium3 podium"></div>
				</div>

				<!-- <div class="lb">
					<div class="podium1"></div>
				</div>

				<div class="lb">
					<div class="podium3"></div>
				</div> -->
			</div>

			
		</div>

		<Footer />
	</body>
</html>

<style>

	body {
		overflow-x: hidden;
		background-color: var(--bg-color);
		color: var(--font-color);
	}

	.wallpaper {
		width: 99vw;
		overflow: hidden;
	}

	.leaderboard {
		width: 100vw;
		height: auto;

		h1 {
			font-size: 3rem;
			font-family: f1-reg;
			font-color: var(--font-color);
			text-align: center;
		}

		.leaderboard-ctn {
			display: flex;
			justify-content: center;
			gap: 2vw;

			.lb {
				display: flex;
				flex-direction: column;
				justify-content: flex-end;
				align-items: flex-end;

				width: 23vw;
				height: 50vh;

				.team {
					display: flex;
					justify-content: space-between;
					align-items: center;

					width: 100%;
					height: 30%;

					.info {
						h1 {
							font-size: 3rem;
							margin-bottom: 15px;
						}
						p {
							margin-top: 15px;

							font-size: 2rem;
							font-family: f1-reg;

							span {
								font-size: 1.5rem;
								font-family: f1-torque;
							}
						}
					}
				}

				.podium {
					border-width: 4px 4px 0 0;
					border-style: solid;
					border-top-right-radius: 35px;
					border-color: #b4b4b6;
				}

				.podium2 {
					min-width: 100%;
					height: 45%;
					background-color: var(--bg-color);
				}
				.podium1 {
					min-width: 100%;
					height: 60%;
					background-color: var(--bg-color);
				}
				.podium3 {
					min-width: 100%;
					height: 30%;
					background-color: var(--bg-color);
				}
				img {
					width: 30%;
				}
			}
		}
	}
</style>

<script>
	const toggleSwitch = document.querySelector(
		'.theme-switch input[type="checkbox"]',
	);

	function switchTheme(e) {
		if (e.target.checked) {
			document.documentElement.setAttribute("data-theme", "dark");
		} else {
			document.documentElement.setAttribute("data-theme", "light");
		}
	}

	toggleSwitch.addEventListener("change", switchTheme, false);
</script>
