---

interface Props {
  team: string;
  points: string;
  url_team: string;

  fname_1: string;
  sname_1: string;
  fname_2: string;
  sname_2: string;

  country1: string;
  podiums1: string;
  points1: string;
  gp1: string;
  dob1: string;

  country2: string;
  podiums2: string;
  points2: string;
  gp2: string;
  dob2: string;

  driverurl1: string;
  driverurl2: string;

}

const {team, points, url_team, fname_1, sname_1, fname_2, sname_2, country1, podiums1, points1, gp1, dob1, country2, podiums2, points2, gp2, dob2, driverurl1, driverurl2} = Astro.props;

---

<div class="container">
    <div class="carousel-view">
      <button id="prev-btn" class="prev-btn">
       <svg viewBox="0 0 512 512" width="20" title="chevron-circle-left">
    <path d="M256 504C119 504 8 393 8 256S119 8 256 8s248 111 248 248-111 248-248 248zM142.1 273l135.5 135.5c9.4 9.4 24.6 9.4 33.9 0l17-17c9.4-9.4 9.4-24.6 0-33.9L226.9 256l101.6-101.6c9.4-9.4 9.4-24.6 0-33.9l-17-17c-9.4-9.4-24.6-9.4-33.9 0L142.1 239c-9.4 9.4-9.4 24.6 0 34z" />
  </svg>
      </button>

      <div id="item-list" class="item-list">

          <div class="item">
            <div class="slide1">

              <div class="team-stats">
                <div class="ctn">
                  <div class="accent"></div>
                  <h1>{team}</h1>
                </div>
                <p>{points} <span>pts</span></p>
              </div>

              <div class="decor"></div>

              <img src=`/img/cars/${url_team}.avif` alt="">

              <div class="decor"></div>

              <div class="drivers">
                <div class="driver1">
                  <p>{fname_1} <span>{sname_1}</span></p>
                </div>
                <div class="driver1">
                  <p>{fname_2} <span>{sname_2}</span></p>
                </div>
              </div>

            </div>
          </div> 
          
          <div class="item">
            <div class="slide2">
              <img src=`/img/portraits/${driverurl1}.avif` alt="">

              <div class="driver-info">
                <div class="questions">
                  <p>Name</p>
                  <p>Country</p>
                  <p>Podiums</p>
                  <p>Points</p>
                  <p>Grand Prix Entered</p>
                  <p>Date of Birth</p>

                </div>
                <div class="answers">
                  <p>{fname_1} {sname_1}</p>
                  <p>{country1}</p>
                  <p>{podiums1}</p>
                  <p>{points1}</p>
                  <p>{gp1}</p>
                  <p>{dob1}</p>
                </div>
              </div>
            </div>
          </div>

          <div class="item">
            <div class="slide2">
              <img src=`/img/portraits/${driverurl2}.avif` alt="">

              <div class="driver-info">
                <div class="questions">
                  <p>Name</p>
                  <p>Country</p>
                  <p>Podiums</p>
                  <p>Points</p>
                  <p>Grand Prix Entered</p>
                  <p>Date of Birth</p>

                </div>
                <div class="answers">
                  <p>{fname_2} {sname_2}</p>
                  <p>{country2}</p>
                  <p>{podiums2}</p>
                  <p>{points2}</p>
                  <p>{gp2}</p>
                  <p>{dob2}</p>
                </div>
              </div>
            </div>
          </div>
      </div>

      <button id="next-btn" class="next-btn">
            <svg viewBox="0 0 512 512" width="20" title="chevron-circle-right">
    <path d="M256 8c137 0 248 111 248 248S393 504 256 504 8 393 8 256 119 8 256 8zm113.9 231L234.4 103.5c-9.4-9.4-24.6-9.4-33.9 0l-17 17c-9.4 9.4-9.4 24.6 0 33.9L285.1 256 183.5 357.6c-9.4 9.4-9.4 24.6 0 33.9l17 17c9.4 9.4 24.6 9.4 33.9 0L369.9 273c9.4-9.4 9.4-24.6 0-34z" />
  </svg>
          </button>

      </div>
      
  </div>
  
  <style>

    .slide1 {
      display: flex;
      flex-direction: column;
      justify-content: center;

      padding: 20px;

      .ctn {
        display: flex;
        justify-content: center;
      }


      .team-stats {
        display: flex;
        justify-content: space-between;

        h1 {
          font-size: 3rem;
          font-family: f1-torque;

          margin: 0;

        }
        p {
          font-size: 2.5rem;
          font-family: f1-torque;

          margin: 0;

          span {
            font-size: 1.5rem;
          }
        }
      }

      img {
        width: 85%;
        margin-left: 7.5%;
      }

      .drivers {
        display: flex;
        justify-content: center;
        gap: 5%;
        margin-top: 4%;
        

        .driver1 {
          width: 45%;
          height: 7vh;

          border-style: solid;
          border-color: #b4b4b6;
          border-width: 1px;
          border-bottom-right-radius: 20px;
          border-left-width: 0;
          border-top-width: 0;

          p {
            font-size: 2rem;
            font-family: f1-reg;

            span {
              font-family: f1-bold;
            }
          }

        }
      }


      .decor {
        max-width: 905;
        min-height: 2px;
        background-color: #b4b4b6;

        margin: 10px 0 10px 2.5% ;

      }

      .accent {
        background-color: blue;
        min-width: 5px;
        min-height: 10px;

        margin-left: 10px;
        margin-right: 10px;
      }
    }

    .slide2 {
      display: flex;
      justify-content: space-between;

      img {
        height: 33vh;
        margin-top: 7vh;
      }

      .driver-info {
        display: flex;
        justify-content: space-between;

        margin-right: 3vw;
        margin-top: 2vh;

        .questions {
          margin-right: 5vw;
          p {
            font-size: 1.8rem;
            font-family: f1-bold;

            margin-top: 35px;
          }
        }
        .answers {
          p {
            font-size: 1.5rem;
            font-family: f1-reg;

            margin-top: 37px;
            margin-left: auto
          }
        }
      }
    }


    button{
      border: none;
      cursor: pointer;
      color: white;
      background: none;
      transition: all .3s ease-in-out;
  }
  
  .container {
    width: 800px;
    /* height: 100vh; */
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: white;
  }
  
  .carousel-view {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0;
    padding: 44px 0;
    transition: all 0.25s ease-in;
  }
  
  .carousel-view .item-list {
    max-width: 41vw;
    width: 70vw;
    padding: 50px 10px;
    display: flex;
    gap: 48px;
    scroll-behavior: smooth;
    transition: all 0.25s ease-in;
    -ms-overflow-style: none; /* IE and Edge */
    scrollbar-width: none; /* Firefox */
    overflow: auto;
    scroll-snap-type: x mandatory;
  }
  
  
  /* Hide scrollbar for Chrome, Safari and Opera */
  .item-list::-webkit-scrollbar {
    display: none;
  }
  
  .prev-btn {
    background = none;
    cursor: pointer;
  }
  
  .next-btn {
    cursor: pointer;
  }
  
  .item {
    scroll-snap-align: center;
    min-width: 40vw;
    height: 40vh;
    background-color: rgb(250, 250, 250);

    border-top-right-radius: 35px;
    border-color: #b4b4b6;
    border-style: solid;
    border-bottom-width: 0;
    border-left-width: 0;
  }
  
      
  </style>
  
  <script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.carousel-view').forEach(carousel => {
      const prev = carousel.querySelector('.prev-btn');
      const next = carousel.querySelector('.next-btn');
      const list = carousel.querySelector('.item-list');

      const itemWidth = 465;
      const padding = 10;

      prev.addEventListener('click', () => {
        list.scrollLeft -= itemWidth + padding;
      });

      next.addEventListener('click', () => {
        list.scrollLeft += itemWidth + padding;
      });
    });
  });

  </script>
  